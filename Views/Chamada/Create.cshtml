@model FormularioCadastro.Models.DbChamada

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Chamado</h1>


<hr />
<div class="row">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="nome" class="control-label">Nome</label>
                    <input asp-for="nome" class="form-control form-control-sm" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="email" class="control-label">E-mail</label>
                    <input asp-for="email" class="form-control form-control-sm" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="datanascimento" class="control-label">Data de Nascimento</label>
                    <input asp-for="datanascimento" class="form-control form-control-sm" />
                    <span asp-validation-for="datanascimento" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="sexo" class="control-label">Sexo</label>
                    <select asp-for="sexo" class="form-control form-control-sm">
                        <option value = "M">Masculino</option>    
                        <option value = "F">Feminino</option>
                    </select>
                    <span asp-validation-for="sexo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="rua" class="control-label">Rua</label>
                    <input asp-for="rua" class="form-control form-control-sm" />
                    <span asp-validation-for="rua" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <label asp-for="numero" class="control-label">Número</label>
                    <input asp-for="numero" class="form-control form-control-sm" />
                    <span asp-validation-for="numero" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="cep" class="control-label">C.E.P</label>
                    <input asp-for="cep" class="form-control form-control-sm" />
                    <span asp-validation-for="cep" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="cidade" class="control-label">Cidade</label>
                    <input asp-for="cidade" class="form-control form-control-sm" />
                    <span asp-validation-for="cidade" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="estado" class="control-label">Estado</label>
                        <input asp-for="estado" class="form-control form-control-sm" />
                        <span asp-validation-for="estado" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="grauurgencia" class="control-label">Grau de urgencia</label>
                        <input asp-for="grauurgencia" class="form-control form-control-sm" />
                        <span asp-validation-for="grauurgencia" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <label asp-for="mensagem" class="control-label">Mensagem</label>
                        <input asp-for="mensagem" class="form-control form-control-sm" />
                        <span asp-validation-for="mensagem" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                 <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            </div>



    </form>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
